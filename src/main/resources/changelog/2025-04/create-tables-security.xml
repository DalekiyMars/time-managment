<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    
    <changeSet id="2" author="you">
        <createTable tableName="sec_users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="timesheet" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    
        <createTable tableName="sec_user_roles">
            <column name="user_id" type="BIGINT"/>
            <column name="role" type="VARCHAR(50)"/>
    
        </createTable>
    
        <addForeignKeyConstraint
                baseTableName="sec_user_roles"
                baseColumnNames="user_id"
                referencedTableName="sec_users"
                referencedColumnNames="id" constraintName="fk_sec_user_id_id"/>
    </changeSet>
</databaseChangeLog>